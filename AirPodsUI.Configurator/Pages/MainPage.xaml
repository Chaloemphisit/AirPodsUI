<Page x:Class="AirPodsUI.Configurator.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AirPodsUI.Configurator.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">
    <DockPanel LastChildFill="True" Margin="15 15">
        <!-- Read me contents -->
        <Label FontWeight="Bold" FontSize="24" Content="Welcome to AirPodsUI!" DockPanel.Dock="Top" Margin="0 10"/>
        <TextBox IsEnabled="False" x:Name="contents"/>
    </DockPanel>
</Page>
