<Window x:Class="AirPodsUI.Configurator.Cards.Pencil"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStyle="None"
        Topmost="True"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Loaded="Window_Loaded"
        Top="0" Left="0"
        Title="PencilPopup" Height="60" Width="220">
    <Border CornerRadius="30" Background="#252525" x:Name="background">
        <Grid>
            <Image x:Name="devIcon" RenderOptions.BitmapScalingMode="HighQuality" Source="pack://application:,,,/Assets/AirPods.png" Width="20" Height="20" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20 0"/>
            <Label x:Name="devName" Content="Jose's AirPods" FontFamily="pack://application:,,,/Fonts/#SF Pro Display Semibold" VerticalAlignment="Top" HorizontalAlignment="Center" Foreground="White" Margin="0 10" FontSize="18"/>
            <Label x:Name="devStatus" Content="Connected" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="pack://application:,,,/Fonts/#SF Pro Display Semibold" Foreground="DarkGray" FontSize="14" Margin="0 20 0 0"/>
        </Grid>
    </Border>
</Window>
